/* pages/editor/editor.wxss */

@import "/css/common.wxss";

page {
  width: 100%;
  height: 100%;
}

.editor {
}

.view-note {
  width: 100%;
  box-sizing: border-box;
  display: block;
  padding: 1em;
  font-size: 17pt;
}

.edit-note {
  position: fixed;
  right: 5%;
  bottom: 5%;
  width: 2em;
  height: 2em;
  box-sizing: border-box;
  border: 1px solid rgb(9, 187, 7);
  border-radius: 1em;
  background: white;
  text-align: center;
  vertical-align: middle;
  color: rgb(9, 187, 7);
  line-height: 2em;
  font-size: 1em;
}