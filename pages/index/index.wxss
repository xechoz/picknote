/**index.wxss**/
@import "../css/common.wxss";

.container {
  width: 100%;
  height: 100%;
  background: #fafafa;
}

.list-container {
  width: 100%;
  columns: 2;
  column-gap: .25em;
  box-sizing: border-box;
  padding: .5em;
  display: flex;
  flex-wrap: wrap;
  justify-content: flex-start;
  align-content: flex-start;
}

.note-item {
  position: relative;
  min-height: 4em;
  padding: .5em;
  box-sizing: border-box;
  border-radius: 0  2px 2px 0;
  margin-top: .5em;
  background: white;
  width: 100%;
  flex-grow: 0;
  flex-basis: content;
  font-size: 14pt;
}

.note-item:first-of-type {
  min-height: 6em;
}

.note-item::before {
  content: "";
  background: #09bb07;
  top: 0;
  left: 0;
  position: absolute;
  height: 100%;
  width: 2px;
  padding: 0;
}

.note-remove {
  position: absolute;
  left: 100%;
  top: 0;
  width: 4em;
  height: 100%;
  background: #e64340;
  font-size: 1.25em;
  display: flex;
  color: white;
  justify-content: flex-start;
  align-items: center;
  margin-left: .5em;
  padding-left: .5em;
}

.add-note {
  position: fixed;
  right: 5%;
  bottom: 5%;
  width: 1.5em;
  height: 1.5em;
  box-sizing: border-box;
  border: 1px solid rgb(9, 187, 7);
  border-radius: 1em;
  background: white;
  text-align: center;
  vertical-align: middle;
  color: rgb(9, 187, 7);
  line-height: 1.5em;
  font-size: 2em;
  z-index: 9;
}

.show-remove {
  transition: 0.3s;
  transform: translateX(-4em);
}

.hide-remove {
  transition: 0.3s;
  transform: translateX(0);
}

#top-item {
  display: block;
  box-sizing: border-box;
  min-height: 6em;
  margin: 0 .25em;
  padding-left: .25em;
  padding-right: .25em;
  font-size: 18pt;
  align-content: center;
  width: auto;
}